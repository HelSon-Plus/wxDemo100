
@import "../../common.wxss";
.header_banner {
  width: 100%;
  position: relative;
}
.header_banner image {
  width: 100%;
  height: 322px;
}
.header_banner .header_banner_tip {
  position: absolute;
  width: 114px;
  height: 33.5px;
  border-radius: 25.5px;
  background-color: rgba(215, 215, 215, 0.59);
  top: 16px;
  right: 13px;
  font-size: 10px;
  text-align: center;
  line-height: 33.5px;
}
.flower_name {
  font-size: 17px;
  line-height: 24px;
  margin-top: 10px;
}

.flower_name span {
  display: inline-block;
  width: 0px;
  margin: 0 10px;
  height: 15px;
  border-left: 1px solid #9B9B9B;
  position: relative;
  top: 1px;
}
.flower_name_tip {
  margin-top: 19px;
  font-size: 13px;
  line-height: 18px;
}
.flower_price {
  font-size: 23px;
  line-height: 33px;
  margin-top: 9px;
}
.flower_advantage {
  width: 100%;
}
.flower_advantage li {
  margin: 13px 0;
  display: inline-block;
  width: 33.33%;
  color: #9b9b9b;
  font-size: 11px;
  line-height: 15px;
}
.header_goods_mes {
  border-bottom: 1px solid #e5e5e5;
}
.flower_sku_wrap {
  padding-left: 16px;
  padding-top: 16px;
}